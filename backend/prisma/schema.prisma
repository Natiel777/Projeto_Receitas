generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id          Int           @id @default(autoincrement())
  nome        String
  email       String         @unique
  senha       String

  resetToken  String?
  resetExpira DateTime?

  receitas    receitas[]
  comentarios comentarios[]
  avaliacoes  avaliacoes[]
}

model receitas {
  id          Int           @id @default(autoincrement())
  titulo      String
  descricao   String
  imagem      String?
  categoria   String?

  usuario_id  Int
  usuario     usuarios      @relation(fields: [usuario_id], references: [id], onDelete: Cascade)

  comentarios comentarios[]
  avaliacoes  avaliacoes[]
}

model comentarios {
  id          Int        @id @default(autoincrement())
  texto       String

  usuario_id  Int
  usuario     usuarios   @relation(fields: [usuario_id], references: [id], onDelete: Cascade)

  receita_id  Int
  receita     receitas   @relation(fields: [receita_id], references: [id], onDelete: Cascade)
}

model avaliacoes {
  id          Int       @id @default(autoincrement())
  nota        Int

  usuario_id  Int
  usuario     usuarios  @relation(fields: [usuario_id], references: [id], onDelete: Cascade)

  receita_id  Int
  receita     receitas  @relation(fields: [receita_id], references: [id], onDelete: Cascade)
}
